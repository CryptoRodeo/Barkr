<h2>Update Tweet</h2>

<%= 

    form_for :editable_tweet, "/tweets/#{editable_tweet.id}", method: :patch, values: {editable_tweet: editable_tweet} do 
            div class: 'u-full-width' do
                label :username
                text_field :username
            end
            div class: 'input' do
                label :content
                text_area :content, {class: 'u-full-width', width: "800px"}
            end

            div class: 'controls' do
            submit 'Update Tweet', class: 'button-primary'
            end
    end

%>